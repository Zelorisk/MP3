{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "core:path:default",
    "core:event:default",
    "dialog:default",
    "dialog:allow-open",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-read-dir",
    "fs:allow-exists",
    "fs:allow-stat",
    "fs:scope-audio-recursive",
    "fs:scope-home-recursive",
    "fs:scope-document-recursive",
    "fs:scope-download-recursive"
  ]
}
